<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smsbooker.pack" >

    <uses-sdk android:minSdkVersion="14" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.smsbooker.pack.activities.HomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_home"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.smsbooker.pack.activities.CardsListActivity"
            android:label="@string/title_activity_cards_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddCardActivity"
            android:label="@string/title_activity_add_card" >
        </activity>

        <activity
            android:name=".activities.addCardPattern.AddCardPatternAddressStepActivity"
            android:label="@string/title_activity_add_card_pattern" >
        </activity>
        <activity
            android:name=".activities.addCardPattern.AddCardPatternMessageStepActivity"
            android:label="@string/title_activity_add_card_pattern" >
        </activity>
        <activity
            android:name=".activities.addCardPattern.AddCardPatternTypeStepActivity"
            android:label="@string/title_activity_add_card_pattern" >
        </activity>
        <activity
            android:name=".activities.addCardPattern.AddCardPatternCheckwordStepActivity"
            android:label="@string/title_activity_add_card_pattern" >
        </activity>
        <activity
            android:name=".activities.addCardPattern.AddCardPatternQuantityStepActivity"
            android:label="@string/title_activity_add_card_pattern" >
        </activity>
        <activity
            android:name=".activities.addCardPattern.AddCardPatternBalanceStepActivity"
            android:label="@string/title_activity_add_card_pattern" >
        </activity>

        <activity
            android:name=".activities.TransactionsListActivity"
            android:label="@string/title_activity_transactions_list" >
        </activity>

        <service
            android:name="com.smsbooker.pack.services.InboxMessagesHandleService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver
            android:name="com.smsbooker.pack.receivers.BootCompletedReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.SMSReceiver">
            <intent-filter android:priority="100">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

    </application>

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

</manifest>
